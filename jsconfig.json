{
  "compilerOptions": {
    "target": "es6",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "@core/*": ["app/core/*"],
      "@inspect/*": ["app/modules/inspect/*"],
      "@platform/*": ["app/modules/platform/*"],
      "@project/*": ["app/modules/project/*"],
      "@store/*": ["app/store/*"],
      "@app/*": ["app/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
